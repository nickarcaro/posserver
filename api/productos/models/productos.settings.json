{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "name": "Producto",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "activo",
        "inactivo"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "nombre"
    },
    "almacen": {
      "via": "productos",
      "model": "almacenes"
    },
    "precio": {
      "via": "producto",
      "model": "precios"
    },
    "imagen": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "alertas": {
      "via": "producto",
      "collection": "alerta"
    },
    "entrada_stocks": {
      "via": "producto",
      "collection": "entrada-stock"
    },
    "salida_stocks": {
      "via": "producto",
      "collection": "salida-stock"
    }
  }
}
