{
  "kind": "collectionType",
  "collectionName": "Promociones",
  "info": {
    "name": "Promocion",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "inicio_vigencia": {
      "type": "datetime",
      "required": true
    },
    "fin_vigencia": {
      "type": "datetime"
    },
    "almacen": {
      "via": "promocions",
      "model": "almacenes"
    },
    "precio_promocion": {
      "type": "integer",
      "required": true
    },
    "vigente": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "activo",
        "inactivo"
      ],
      "default": "activo"
    },
    "nombre": {
      "type": "string"
    },
    "productos_promocion": {
      "type": "component",
      "repeatable": true,
      "component": "componentes.producto-promocion",
      "required": true
    }
  }
}
